# Manifest file for Advanced DDoS Testing Framework

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include SECURITY.md

# Include configuration files
recursive-include config *.yaml *.yml *.json
recursive-include core/config *.yaml *.yml *.json

# Include templates and static files
recursive-include templates *.html *.css *.js
recursive-include static *.css *.js *.png *.jpg *.ico

# Include data files
recursive-include data *.csv *.json *.txt
recursive-include models *.pkl *.h5 *.pt

# Include scripts
recursive-include scripts *.py *.sh *.bat

# Include tests
recursive-include tests *.py

# Include C extensions source
recursive-include core/performance *.c *.h

# Exclude development files
exclude .gitignore
exclude .github
exclude .vscode
exclude *.pyc
exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store